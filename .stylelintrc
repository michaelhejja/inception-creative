{
    "extends": "stylelint-config-standard",
        "rules": {
            "color-hex-case": "upper",
            "color-hex-length": "long",
            "declaration-empty-line-before": "never",
            "declaration-block-no-redundant-longhand-properties": [true, {"ignoreShorthands": ["bg", "font", "transition", "flex-flow"]}],
            "indentation": 4,
            "number-leading-zero": "never",
            "color-named": "never",
            "at-rule-no-unknown": [true, {
                "ignoreAtRules": ["function", "if", "each", "include", "mixin", "else", "content", "for", "at-root", "return"]
            }]
        }
}
